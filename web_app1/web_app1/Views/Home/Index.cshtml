@{ 
    Layout = "_Layout";
}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Welcome To The Event</h1>
        <p class="lead text-muted">
            A reader lives a thousand lives before he dies. The man who never reads lives only one.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Events</a>
        </p>
    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <h3 class="display-4">Past Events</h3>
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/1999/xhtml"></svg>
                    <div class="card-body">
                        <p class="card-text">description of Event</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">Category</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="display-3">Upcoming Events</h3>
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/1999/xhtml"></svg>
                    <div class="card-body">
                        <p class="card-text">description of Event</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">Category</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
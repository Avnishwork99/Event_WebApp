@model IEnumerable<web_app1.Models.EventModel>

@{
    Layout = "_Layout";
}
<div class="container">
    <h3 class="display-4">All Events</h3>
    <div class="row">
        @foreach (var count in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/1999/xhtml"></svg>
                    <div class="card-body">
                        <h3 class="card-title">@count.Title</h3>
                        <p class="card-text">@count.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book/GetBook/@count.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-muted">@count.Category</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
